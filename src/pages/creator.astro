<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <title>Создатель — Juggernaut CR</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      body{margin:0;font-family:system-ui,Segoe UI,Roboto,sans-serif}
      .wrap{max-width:900px;margin:0 auto;padding:24px}
      .back{display:inline-block;margin:4px 0 16px;text-decoration:none;opacity:.7}
      h1{font-size:clamp(28px,5vw,40px);margin:0 0 16px}
      .card{display:flex;gap:16px;align-items:center;border:1px solid #e6e6ec;border-radius:14px;padding:16px 18px;box-shadow:0 2px 10px rgba(0,0,0,.03)}
      .avatar{width:80px;height:80px;border-radius:50%;object-fit:cover}
      .muted{opacity:.75;margin:.25rem 0 .75rem}
      .row{display:flex;gap:10px;flex-wrap:wrap}
      .btn{padding:10px 16px;border:1px solid currentColor;border-radius:12px;text-decoration:none}
      .btn.small{padding:6px 10px;font-size:14px;border-radius:10px}
      .chip{display:inline-flex;align-items:center;gap:6px;padding:6px 10px;border:1px solid #e6e6ec;border-radius:999px;text-decoration:none;color:inherit}
      .ico{width:16px;height:16px;vertical-align:-2px}
    </style>
  </head>
  <body>
    <main class="wrap">
      <a class="back" href="/">← На главную</a>
      <h1>Создатель</h1>

      <section class="card">
        <img class="avatar" src={me.photo} alt={`Создатель — ${me.name}`} />
        <div>
          <h2 style="margin:.1rem 0 .25rem;font-size:20px">{me.name}</h2>
          <p class="muted">{me.bio}</p>

          <div class="row">
            <!-- Gmail -->
            <a class="chip" href={`mailto:${me.gmail}`}>
              <!-- mail icon -->
              <svg class="ico" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" aria-hidden="true">
                <rect x="3" y="5" width="18" height="14" rx="2"/><path d="M3 7l9 6 9-6"/>
              </svg>
              {me.gmail}
            </a>

            <!-- Mail.ru -->
            <a class="chip" href={`mailto:${me.mailru}`}>
              <svg class="ico" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" aria-hidden="true">
                <rect x="3" y="5" width="18" height="14" rx="2"/><path d="M3 7l9 6 9-6"/>
              </svg>
              {me.mailru}
            </a>

            <!-- Telegram -->
            <a class="btn small" href={me.tg} target="_blank" rel="noopener">
              <svg class="ico" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M21.8 4.1c.3-.98-.6-1.86-1.55-1.5L2.64 9.2c-1.4.55-1.3 2.55.15 2.98l4.9 1.45 1.9 5.95c.25.78 1.22.98 1.78.36l2.9-3.08 5.3 3.85c.86.63 2.07.17 2.3-.88L21.8 4.1Zm-4.6 2.7-8.7 7 1 3.2 1.2-2.6 6.5-7.6Z"/>
              </svg>
              Telegram
            </a>
          </div>
        </div>
      </section>
    </main>
  </body>
</html>
