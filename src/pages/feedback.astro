---
import AuthBox from '../components/AuthBox.tsx';
import Comments from '../components/Comments.tsx';
---

<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <title>Отзывы и предложения — Juggernaut</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body style="font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Arial, sans-serif; background:#0f1320; color:#e9eef7; margin:0; padding:24px;">
    <div style="max-width:880px; margin:0 auto;">
      <a href="/" style="display:inline-block;padding:8px 14px;background:#1e253a;border:1px solid rgba(255,255,255,.2);border-radius:8px;text-decoration:none;color:#a3d9ff;font-weight:600;transition:.15s background;">⬅ На главную</a>
      <h1 style="text-align:center;line-height:1.3;margin:16px 0 8px;">Отзывы и предложения</h1>
      <p style="opacity:.8;text-align:center;margin:0 0 16px;">Поделитесь идеями, багами и впечатлениями.</p>

      <!-- Блок авторизации -->
      <AuthBox client:load />

      <!-- Лента комментариев для этой страницы -->
      <Comments client:load slug="feedback" />
    </div>
  </body>
</html>
