---
import AuthBox from '../components/AuthBox.tsx';
import Comments from '../components/Comments.tsx';
---
<html lang="ру">
  <head>
    <meta charset="utf-8" />
    <title>Отзывы и предложения — Juggernaut</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      :root{
        --bg:#0f1320;
        --fg:#e9eef7;
        --muted:#a8b0c3;
        --stroke:rgba(255,255,255,.14);
        --stroke-hover:rgba(255,255,255,.22);
      }
      body{
        font-family:system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Cantarell,Arial,sans-serif;
        background:#0f1320; color:var(--fg);
        margin:0; padding:24px;
      }
      .container{max-width:880px; margin:0 auto;}
      /* Кнопка как на скрине */
      .btn-pill{
        display:inline-flex; align-items:center; justify-content:center;
        padding:10px 18px;
        border-radius:999px;
        border:1px solid var(--stroke);
        background:linear-gradient(180deg,rgba(255,255,255,.07),rgba(255,255,255,.03));
        color:var(--fg);
        text-decoration:none;
        font-weight:600;
        line-height:1;
        box-shadow:
          inset 0 1px 0 rgba(255,255,255,.06),
          0 1px 1px rgba(0,0,0,.25);
        transition:background .15s ease, border-color .15s ease, transform .12s ease, box-shadow .15s ease;
      }
      .btn-pill:hover{
        background:linear-gradient(180deg,rgba(255,255,255,.10),rgba(255,255,255,.04));
        border-color:var(--stroke-hover);
        transform:translateY(-1px);
        box-shadow:
          inset 0 1px 0 rgba(255,255,255,.09),
          0 2px 8px rgba(0,0,0,.35);
      }
      .btn-pill:active{ transform:translateY(0); }
      .title{ text-align:center; line-height:1.3; margin:16px 0 8px; }
      .lead{ opacity:.8; text-align:center; margin:0 0 16px; }
    </style>
  </head>
  <body>
    <div class="container">
      <a href="/" class="btn-pill">На главную</a>

      <h1 class="title">Отзывы и предложения</h1>
      <p class="lead">Делитесь своими впечатлениями, идеями для будущего развития сайта.</p>

      <!-- Блок авторизации -->
      <AuthBox client:load />

      <!-- Лента комментариев для этой страницы -->
      <Comments client:load slug="feedback" />
    </div>
  </body>
</html>
